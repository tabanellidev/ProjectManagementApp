<h1> Crea nuova Gestione </h1>

Stai creando un gestore per il progetto: <%= params[:project_id] %> <br>

<% if @manage.errors.any? %>
Errori:<br>
  <% @manage.errors.full_messages.each do |message|%>
  <%= message %> <br>
  <%end%>
<%end%>

<%= form_with model: @manage do |form| %>
  <div>
    <%= form.label :user_id %><br>
    <%= form.number_field :user_id %> 
    <% @manage.errors.full_messages_for(:user_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= form.hidden_field :project_id, value: params[:project_id] %>




  <div>
    <%= form.submit %>
  </div>
<% end %>