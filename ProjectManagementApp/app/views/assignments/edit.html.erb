<br>
<div class="container">
  <div class="row">
    <div class="col-md-11 align-self-center">
      <h1> Modifica Compito </h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-7 ">
      <%= form_with model: @assignment do |form| %>

        <div class="form-group">
          <% invalid = @assignment.errors.include?(:title) %>

          <%= form.label :Titolo %><br>
          <%= form.text_field :title,  class: "form-control #{'is-invalid' if invalid}", placeholder: "Inserisci il titolo"  %>
          <% @assignment.errors.full_messages_for(:title).each do |message| %>
            <div class="invalid-feedback d-block"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <% invalid = @assignment.errors.include?(:description) %>

          <%= form.label :Descrizione %><br>
          <%= form.text_area :description,  class: "form-control #{'is-invalid' if invalid}", placeholder: "Inserisci il titolo"  %>
          <% @assignment.errors.full_messages_for(:description).each do |message| %>
            <div class="invalid-feedback d-block"><%= message %></div>
          <% end %>
        </div>

        
        <% user_array = User.all.map { |user| [user.name + " " + user.surname, user.id] } %>

        <div class="form-group">
          <%= form.label :user_id %><br>
          <%= form.select :user_id, options_for_select(user_array), {}, {class: "form-select"} %>    
        </div>

        

        <div class="form-group">
          <% invalid = @assignment.errors.include?(:start_date) %>

          <%= form.label :start_date %><br>
          <%= form.date_field :start_date,  class: "form-control #{'is-invalid' if invalid}" %>
          <% @assignment.errors.full_messages_for(:start_date).each do |message| %>
            <div class="invalid-feedback d-block"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <% invalid = @assignment.errors.include?(:expiration_date) %>

          <%= form.label :expiration_date %>
          <%= form.date_field :expiration_date,  class: "form-control #{'is-invalid' if invalid}" %>
          <% @assignment.errors.full_messages_for(:expiration_date).each do |message| %>
            <div class="invalid-feedback d-block"><%= message %></div>
          <% end %>
        </div>
  
        <br>
        <div>
          <%= form.button "Modifica Compito", type: "submit", class: "btn btn-outline-info" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
