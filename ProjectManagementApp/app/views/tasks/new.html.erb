<h1>Crea task per il Progetto <%= params[:project_id] %> </h1>

<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @task.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area  :description %>
    <% @task.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <% if params[:project_id].nil? %>

    <%= form.label :project_id %><br>
    <%= form.number_field :project_id %> 
    <% @task.errors.full_messages_for(:project_id).each do |message| %>
      <div><%= message %></div>
    <% end %>

  <% else %>

    <%= form.label :project_id %><br>
    <%= form.number_field :project_id, value: params[:project_id], readonly: true %> 
    <% @task.errors.full_messages_for(:project_id).each do |message| %>
      <div><%= message %></div>
    <% end %>

  <% end %>
   <div>
    
  </div>

  
  <div>
    <%= form.submit %>
  </div>
<% end %>
