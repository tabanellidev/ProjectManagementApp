<div class="container">
  <div class="row">
    <div class="col-md-11 align-self-center">
      <h1> Modifica task </h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-7 ">
      <%= form_with model: @task do |form| %>
        <div class="form-group">
          <% invalid = @task.errors.include?(:title) %>

          <%= form.label :Titolo %><br>
          <%= form.text_field :title, class: "form-control #{'is-invalid' if invalid}", placeholder: "Inserisci il titolo" %>
          <% @task.errors.full_messages_for(:title).each do |message| %>
            <div class="invalid-feedback d-block"> <%= message %> </div>
          <% end %>
        </div>

        <div class="form-group">
          <% invalid = @task.errors.include?(:description) %>

          <%= form.label :Descrizione %>
          <%= form.text_area  :description, class: "form-control #{'is-invalid' if invalid}", placeholder: "Inserisci il titolo" %>
          <% @task.errors.full_messages_for(:description).each do |message| %>
            <div class="invalid-feedback d-block"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <% invalid = @task.errors.include?(:start_date) %>

          <%= form.label :start_date %><br>
          <%= form.date_field :start_date, value: Date.today, class: "form-control #{'is-invalid' if invalid}"%> 
          <% @task.errors.full_messages_for(:start_date).each do |message| %>
            <div class="invalid-feedback d-block"><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <% invalid = @task.errors.include?(:expiration_date) %>

          <%= form.label :expiration_date %>
          <%= form.date_field :expiration_date, class: "form-control #{'is-invalid' if invalid}" %> 
          <% @task.errors.full_messages_for(:expiration_date).each do |message| %>
            <div><%= message %></div>
          <% end %>
        <br>
        <div>
           <%= form.button "Crea Task", type: "submit", class: "btn btn-outline-info" %>
        </div>
      <% end %>

    </div>
  </div>
</div>


