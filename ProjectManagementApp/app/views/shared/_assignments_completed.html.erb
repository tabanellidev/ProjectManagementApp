<% if !user.assignments %>
    <hr>
    <div class="row">
        <div class="col-sm-7">
            <p class="text-muted mb-0"> Nessun compito assegnato</p>
        </div>
    </div>
    <% else %>
    <% user.assignments.each do |assignment| %>
        <% if assignment.status == 'Completed' || assignment.status == 'Delayed' %>
            <hr>
            <div class="row">
                <div class="col-sm-1">
                    <span class="mb-0 align-middle"> <%= assignment.id %></span>
                </div>
                <div class="col-sm-8">
                    <span class="mb-0 align-middle"> <%= assignment.title %> </span>
                </div>
                <div class="col-sm-1">
                    <%= button_to "Info", assignment_path(assignment.id), method: :get, class: "btn btn-outline-primary"%>
                </div>
            </div>
        <% end %>
    <% end %>
<% end %>