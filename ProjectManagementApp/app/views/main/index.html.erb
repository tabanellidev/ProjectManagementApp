<br>
<div class="d-flex align-items-center justify-content-center">
<H1> Welcome to Project Management App </H1>
</div>

<br>
<% if current_user %>
<div class="container">
  <div class="row">
    <div class="col-md-7 ">        
          <%= render "shared/profile", user: current_user %>
      <div class="card ">
        <div class="card-body ">
        <h4 class="card-title">Compiti in corso</h4>
           <%= render "shared/assignments_ongoing", user: current_user %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100 ">
        <div class="card-body">
          <div class="row">
                <div class="col-sm-9">
                  <h4 class="card-title d-inline-block">Notifiche </h4>
                </div>
                <div class="col-sm-1">
                  <%= button_to "+", { :controller => "users", :action => "show_notifications", id: current_user.id}, method: :get, class: "btn btn-outline-primary"%>
                </div>
            </div>
        <hr>
          <div class="scrollable" style="overflow-y: auto; max-height: 350px;">
            <%= turbo_frame_tag "notifications" do %>
              <%= render "notifications/notifications", user: current_user %>
            <%  end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% else %>
    <p> Non sei loggato </p>
        <%= link_to "Login", new_user_session_path %>
<%  end %>






