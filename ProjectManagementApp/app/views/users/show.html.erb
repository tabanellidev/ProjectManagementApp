<div class="container">
  <div class="row">
    <div class="col-md-7 align-self-center">
      <h1> Profilo utente </h1>
    </div>
    <div class="col-md-5 align-self-center">
      <div class="btn-toolbar">
        <%= button_to "Modifica", edit_user_path, params:{user: @user.id} , method: :get, class: "btn btn-outline-info" %>
        <%= button_to "Elimina", { action: "destroy", id: @user.id }, 
        method: :delete, form: {data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-outline-info "%>
      </div>
    </div>
  </div>
</div>




<br>
<div class="container">
  <div class="row">
    <div class="col-md-7 ">
        <%= render "shared/profile", user: @user %>
      <div class="card mb-4">
        <div class="card-body ">
        <h4 class="card-title">Compiti in corso</h4>
           <%= render "shared/assignments_ongoing", user: @user %>
        </div>
      </div>
      <div class="card ">
        <div class="card-body ">
        <h4 class="card-title">Progetti gestiti</h4>
           <%= render "shared/manages", user: @user %>
        </div>
      </div>
    </div>
    <div class="col-md-4 ">
      <div class="card h-100">
        <div class="card-body">
        <h4 class="card-title">Compiti completati</h4>
            <%= render "shared/assignments_completed", user: @user %>
        </div>
      </div>
    </div>
  </div>
</div>

<br>
<br>

<div class="container">
  <div class="row">
    <div class="col-md-7 ">
      <div class="card h-100">
        <div class="card-body">
        <h4 class="card-title">Task su cui ha lavorato</h4>
            <% @workedTask.each do |task| %>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <span class="mb-0 align-middle"> <%= task.id %></span>
                </div>
                <div class="col-sm-5">
                    <span class="mb-0 align-middle"> <%= task.title %> </span>
                </div>
                <div class="col-sm-3">
                    <span class="mb-0 align-middle"> <%= task.status %> </span>
                </div>
                <div class="col-sm-1">
                    <%= button_to "Info", assignment_path(task.id), method: :get, class: "btn btn-outline-primary"%>
                </div>
            </div>
            <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4 ">
      <div class="card h-100">
        <div class="card-body">
        <h4 class="card-title">Progetti gestiti</h4>
            <% @projectManaged.each do |project| %>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <span class="mb-0 align-middle"> <%= project.id %></span>
                </div>
                <div class="col-sm-5">
                    <span class="mb-0 align-middle"> <%= project.title %> </span>
                </div>
                <div class="col-sm-3">
                    <span class="mb-0 align-middle"> <%= project.status %> </span>
                </div>
                <div class="col-sm-1">
                    <%= button_to "Info", assignment_path(project.id), method: :get, class: "btn btn-outline-primary"%>
                </div>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


